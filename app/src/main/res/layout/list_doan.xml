<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/gridviewdata2_118"
        android:layout_width="180dp"
        android:layout_height="280dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/duongvien4">
        <androidx.cardview.widget.CardView
            android:id="@+id/khunghinhanh2_118"
            android:layout_width="180dp"
            android:layout_height="165dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/sanpham2_118"
                tools:ignore="ContentDescription"
                android:scaleType="centerCrop"
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:background="@drawable/phobien5" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tensanpham2_118"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Macca Phủ SoCoLa"
            android:layout_below="@+id/khunghinhanh2_118"
            android:textStyle="bold"
            android:textColor="#4F4F4F"
            android:textSize="18dp">
        </TextView>
        <LinearLayout
            android:id="@+id/phancachphobien2_118"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="horizontal"
            android:layout_below="@+id/tensanpham2_118"
            android:layout_marginTop="30dp"
            android:background="#F1F1F1">
        </LinearLayout>
        <TextView
            android:id="@+id/gia2_118"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phancachphobien2_118"
            android:text="45.000 đ"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_marginLeft="15dp">
        </TextView>
        <ImageView
            android:id="@+id/them2_118"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/gia2_118"
            android:layout_below="@id/phancachphobien2_118"
            android:src="@drawable/ic_baseline_add_circle_outline_24"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"></ImageView>

    </RelativeLayout>
</RelativeLayout>