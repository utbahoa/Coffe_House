<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TinTuc.CauChuyen.CauChuyen3">
    <RelativeLayout
        android:id="@+id/ct_cn1_118"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/quaylai11_118"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_quaylai"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp">
        </ImageView>
        <TextView
            android:id="@+id/chitiet_cn1_118"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cảm ơn bạn"
            android:textSize="20dp"
            android:textColor="#0D0D0D"
            android:textStyle="bold"
            android:layout_toRightOf="@id/quaylai11_118"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="90dp">
        </TextView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_chiase"
            android:layout_toRightOf="@id/chitiet_cn1_118"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"></ImageView>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/ct_cn1_118"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/anhminhhoa2_118"
                android:layout_width="550dp"
                android:layout_height="250dp">
                <ImageView
                    android:layout_width="550dp"
                    android:layout_height="250dp"
                    android:src="@drawable/cauchuyen3"></ImageView>
            </RelativeLayout>
            <TextView
                android:id="@+id/tieudebaiviet1_118"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/anhminhhoa2_118"
                android:layout_marginTop="20dp"
                android:text="Cảm ơn bạn, vì đã luôn là 1 bản nguyên khác biệt ..."
                android:textSize="30dp"
                android:paddingLeft="20dp"
                android:textColor="#0D0D0D"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/noidungct1_uudai2_118"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/tieudebaiviet1_118"
                android:layout_marginTop="20dp"
                android:textSize="22dp"
                android:text="Cảm ơn bạn vì đã đồng hành trên hành trình Tạo khác biệt từ chất nguyên bản">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noidungct1_uudai2_118"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textSize="22dp"
                android:text="Thước phim “Khác biệt dưới đây là món quà được lấy cảm hứng từ chất nguyên bản của bạn - như lời cảm ơn đặc biệt Nhà dành cho bạn - Một bản nguyên khác biệt của Nhà.">
            </TextView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>