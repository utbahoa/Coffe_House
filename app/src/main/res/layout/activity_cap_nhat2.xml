<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TinTuc.CapNhat.CapNhat2">
    <RelativeLayout
        android:id="@+id/ct_cn1_118"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/quaylai7_118"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_quaylai"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp">
        </ImageView>
        <TextView
            android:id="@+id/chitiet_cn1_118"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taste of Xmas - Chạm vị giáng sinh"
            android:textSize="20dp"
            android:textColor="#0D0D0D"
            android:textStyle="bold"
            android:layout_toRightOf="@id/quaylai7_118"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp">
        </TextView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_chiase"
            android:layout_toRightOf="@id/chitiet_cn1_118"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"></ImageView>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/ct_cn1_118"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/anhminhhoa2_118"
                android:layout_width="550dp"
                android:layout_height="250dp">
                <ImageView
                    android:layout_width="550dp"
                    android:layout_height="250dp"
                    android:src="@drawable/capnhat2"></ImageView>
            </RelativeLayout>
            <TextView
                android:id="@+id/tieudebaiviet1_118"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/anhminhhoa2_118"
                android:layout_marginTop="20dp"
                android:text="Taste of Xmas - Chạm vị giáng sinh"
                android:textSize="30dp"
                android:paddingLeft="20dp"
                android:textColor="#0D0D0D"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/noidungct1_uudai2_118"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/tieudebaiviet1_118"
                android:layout_marginTop="20dp"
                android:textSize="22dp"
                android:text="Những ngày cuối năm thật khác, Giáng sinh cũng vì thế mà khác hơn sau 1 năm đặc biệt. Thế nhưng tại Nhà năm nay, vị Giáng sinh mà bạn yêu thích, mong chờ từ trước đến nay vẫn sẽ vẹn nguyên và đong đầy - tất cả đều sống động qua từng khoảnh khắc, từng ngóc ngách quanh chiếc bàn cà phê ấm cúng…">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noidungct1_uudai2_118"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textSize="22dp"
                android:text="Và ở cả 2 hương vị thượng hạng mà Barista Nhà đã ấp ủ dành riêng cho mùa ấm áp, được gói ghém cẩn thận trong mẫu ly Giáng sinh phiên bản giới hạn">
            </TextView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>