<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TinTuc.Uudai.Uudai1">
    <RelativeLayout
        android:id="@+id/ct_ud2_118"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/quaylai3_118"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_quaylai"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp">
        </ImageView>
        <TextView
            android:id="@+id/chitiet_uudai2_118"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhà mời cà phê đậm đà, chỉ 12K"
            android:textSize="20dp"
            android:textColor="#0D0D0D"
            android:textStyle="bold"
            android:layout_toRightOf="@id/quaylai3_118"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp">
        </TextView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_chiase"
            android:layout_toRightOf="@id/chitiet_uudai2_118"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"></ImageView>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/ct_ud2_118"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/anhminhhoa2_118"
                android:layout_width="550dp"
                android:layout_height="250dp">
                <ImageView
                    android:layout_width="550dp"
                    android:layout_height="250dp"
                    android:src="@drawable/uudai2"></ImageView>
            </RelativeLayout>
            <TextView
                android:id="@+id/tieudebaiviet1_118"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/anhminhhoa2_118"
                android:layout_marginTop="20dp"
                android:text="Nhà mời cà phê đậm đà, chỉ 12K"
                android:textSize="30dp"
                android:paddingLeft="20dp"
                android:textColor="#0D0D0D"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/noidungct1_uudai2_118"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/tieudebaiviet1_118"
                android:layout_marginTop="20dp"
                android:textSize="22dp"
                android:text="Tuần mới chỉ thật sự tươi tỉnh khi có một tách cà phê đậm đà kề bên. Biết vậy nên Nhà mời liền bạn có hoá đơn từ 50K mua cà phê Việt Nam giá chỉ 12K">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noidungct1_uudai2_118"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textSize="22dp"
                android:text="Nhanh tay mở app, nhập mã YEUCAPHE để nhận ưu đãi. Dù bạn ở đâu, shipper Nhà cũng FREESHIP “vitamin cà phê” tới ngay trong 30 phút!">

            </TextView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>