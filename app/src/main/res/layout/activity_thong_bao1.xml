<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TinTuc.ThongBao.ThongBao1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/tieude_thongbao_118"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF">
            <ImageView
                android:id="@+id/thoat1_thongbao1_118"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_thoat"></ImageView>
            <TextView
                android:id="@+id/noidungtrang_thongbao1_118"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:layout_toRightOf="@id/thoat1_thongbao1_118"
                android:textSize="26dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"></TextView>
            <ImageView
                android:id="@+id/listthongbao_118"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/noidungtrang_thongbao1_118"
                android:src="@drawable/ic_list"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"></ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/tieude_thongbao_118"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/noidungthongbao_118"
            android:layout_marginTop="10dp"
            android:background="#F1F1F1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/ln"
                android:layout_height="650dp">
                <ListView
                    android:id="@+id/listview"
                    android:layout_width="wrap_content"
                    android:layout_height="650dp"
                    android:background="#FFF">
                </ListView>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>